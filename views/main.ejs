<% include header  %>
<body style="background-image: url('static/bg_health.jpg'); background-repeat:no-repeat; background-size:cover;">

 <div class="container">
  <div class="card-panel teal lighten-1"><center><h3 style="font-weight:bold;color:white;" id="title"></h3></center> </div>
  <h3 id="description"></h3>
  <div class="customNotifications">
    <div class="alert alert-danger" id="nameFormWarning" role="alert">
      <p class="nameAlert">Kindly enter your name before proceeding!&nbsp;<a href="#" class="close nameAlert" data-hide="alert">&times;</a></p>
    </div>
    <div class="alert alert-success" id="quizSuccess" role="alert">
      <p class="nameAlert">Quiz has been deleted!&nbsp;<a href="#" class="close nameAlert" data-hide="alert">&times;</a></p>
    </div>
    <div class="alert alert-danger" id="quizWarning" role="alert">
      <p class="nameAlert">Quiz does not exist!&nbsp;<a href="#" class="close nameAlert" data-hide="alert">&times;</a></p>
    </div>
    <div class="alert alert-danger" id="placeholderWarning" role="alert">
      <p class="nameAlert"><span>Placeholder Warning!&nbsp;</span><a href="#" class="close nameAlert" data-hide="alert">&times;</a></p>
    </div>
  </div>

  <div class="alert alert-success" id="placeholderSuccess" role="alert">
    <p class="nameAlert"><span>Placeholder Success!&nbsp;</span><a href="#" class="close nameAlert" data-hide="alert">&times;</a></p>
  </div>
  <div class="row" id="covidgif">
  <div class="card col s12 z-depth-2">
  <div class="card-image" style="padding-top:10px;">
          <img src="static/image/covid.gif" height="320px"></img>
   </div>
   <div class="card-content">
    <form id="nameForm" role="form">
      <div class="form-group">
        <br><br><br>
        <label for="name"><h4>Enter Your Name:</h4></label>
        <input type="text" id="firstName" name="nameValue" placeholder="Your Name Here" class="form-control"><br><br><br><br>
        <label for="titlesDropdown"><h4> Select Quiz Level : </h4></label> 
        <div class="input-field">
        <select   id="titlesDropdown" style="display:inline;">
          <% for(var i=0; i<titles.length; i++) {%>
             <option><%= titles[i] %></option>
          <% } %> 
        </select>
        </div>
        <br>
        <div class="col s4 offset-s4">
        <center><br><br><br><br><br><br>
        <input class="btn btn-small red" type="submit" id="start_quiz" value="Begin!">
                </center><br><br>
        <center><a href="/"><div class="btn grey" type="submit">Home</div></a> </center>
        <br><br><br>
        </div>
        </div>

      </div>
    </form>
  </div>
</div>
  <form id="editQuizForm" crole="form">
    <div class="form-group editQuizFormDiv" id="editQuiz">
    </div>
  </form>

  <h2 id="welcome"></h2>
  <h3 id="ajaxloading"></h3>
  <button id="reload" class="btn btn-success btn-sm">Reload</button>
  <a href="" id="backHome" class="btn btn-primary btn-sm">Back To Home</a>
  <div class="customNotifications">
    <div class="alert alert-danger" id="answerWarning" role="alert">
      <p class="nameAlert">Please choose an answer before proceeding!&nbsp;<a href="#" class="close nameAlert" data-hide="alert">&times;</a></p>
    </div>
  </div>
  <div class="row" id="quess">
  <div class="card blue-grey"> 
  <div class="card-content white-text" id="quescontain" style="display:none;">
  <h3 id="questionNumber"></h3>
  <h3 id="question" class="center-align"></h3>
  
  <form id="answerChoices">
    <input type="radio" name="answers" id="0" style="opacity:10;position:relative;">
    <label for="0" id="ansLabels" style="font-size:20px;color:white;"></label><br id="b0">
    <input type="radio" name="answers" id="1" style="opacity:10;position:relative;">
    <label for="1" id="ansLabels" style="font-size:20px;color:white;"></label><br id="b1">
    <input type="radio" name="answers" id="2" style="opacity:10;position:relative;">
    <label for="2" id="ansLabels" style="font-size:20px;color:white;"></label><br id="b2">
    <input type="radio" name="answers" id="3" style="opacity:10;position:relative;">
    <label for="3" id="ansLabels" style="font-size:20px;color:white;"></label><br id="b3">
    <input type="radio" name="answers" id="4" style="opacity:10;position:relative;">
    <label for="4" id="ansLabels" style="font-size:20px;color:white;"></label><br id="b4">
    <input type="radio" name="answers" id="5" style="opacity:10;position:relative;">
    <label for="5" id="ansLabels" style="font-size:20px;color:white;"></label><br id="b5">
    <input type="radio" name="answers" id="6" style="opacity:10;position:relative;">
    <label for="6" id="ansLabels" style="font-size:20px;color:white;"></label><br id="b6">
  </form>
  <div id="images"></div><br>
  <button id="previousQuestion" class="btn orange"><< Back</button>
  <button id="nextQuestion" class="btn orange">Next >></button>
  </div>
  </div>
  </div>
  <div class="row" id="ress" style="display:none;">
  <div class="col s12">
  <div class="card">
  <div class="card-content">
  <blockquote><center><h2 id="nameScore"></h2></center> </blockquote>
  <center>
    <canvas id="piechart" width="480" height="250"></canvas>
  </center>
  <table class="table table-hover" id="scoreTable" style="font-size:10px;">
    <thead>
      <tr>
        <th>Question</th>
        <th>Your Answer</th>
        <th>Correct Answer</th>
        <th>Percent Correct</th>
      </tr>
      <tbody>
      </tbody>
    </thead>
  </table>
  <h4 id="tenScores">Leaderboard :</h4>
  <table class="table table-hover" id="userTable">
    <thead>
      <tr>
        <th>Name</th>
        <th>Score</th>
      </tr>
      <tbody>
      </tbody>
    </thead>
  </table><br><br>
  <center>
    <a href="" id="home" class="btn grey">Back To Home</a>
    <button id="screenshot" class="btn green">Save a Screenshot</button>
  </center>
  <br>
  </div>
  </div>
  </div>
 <iframe src="https://www.facebook.com/plugins/share_button.php?href=https%3A%2F%2Fwww.who.int%2Femergencies%2Fdiseases%2Fnovel-coronavirus-2019&layout=button_count&size=small&width=100&height=20&appId" width="100" height="20" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true" allow="encrypted-media"></iframe>
  </div>
</div>
<script src="static/js/jquery-2.1.4.min.js"></script>
<script src="static/js/html2canvas.js"></script>
<script type="text/javascript" src="static/js/materialize.min.js"></script>
<script src="static/js/script.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/1.3.8/FileSaver.min.js"></script>
<script>
$('#screenshot').click( function(){
  html2canvas(document.body, {
  onrendered: function(canvas)
  {
  canvas.toBlob(function(blob) {
  saveAs(blob, "Results.png");
  });
  }
  });
  });
</script>
</body>
</html>